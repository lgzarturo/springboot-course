{
  "branches": [
    "main",
    {
      "name": "develop",
      "prerelease": "beta"
    }
  ],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          { "type": "feat", "release": "minor" },
          { "type": "fix", "release": "patch" },
          { "type": "perf", "release": "patch" },
          { "type": "revert", "release": "patch" },
          { "type": "docs", "release": false },
          { "type": "style", "release": false },
          { "type": "refactor", "release": "patch" },
          { "type": "test", "release": false },
          { "type": "build", "release": "patch" },
          { "type": "ci", "release": false },
          { "type": "chore", "release": false }
        ],
        "parserOpts": {
          "noteKeywords": ["BREAKING CHANGE", "BREAKING CHANGES", "BREAKING"]
        }
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            { "type": "feat", "section": "‚ú® Nuevas Funcionalidades", "hidden": false },
            { "type": "fix", "section": "üêõ Correcciones de Bugs", "hidden": false },
            { "type": "perf", "section": "üöÄ Mejoras de Rendimiento", "hidden": false },
            { "type": "revert", "section": "‚è™ Reversiones", "hidden": false },
            { "type": "docs", "section": "üìö Documentaci√≥n", "hidden": false },
            { "type": "style", "section": "üíé Estilos", "hidden": true },
            { "type": "refactor", "section": "üì¶ Refactorizaciones", "hidden": false },
            { "type": "test", "section": "üö® Tests", "hidden": true },
            { "type": "build", "section": "üõ† Sistema de Build", "hidden": false },
            { "type": "ci", "section": "‚öôÔ∏è Integraci√≥n Continua", "hidden": true },
            { "type": "chore", "section": "‚ôªÔ∏è Tareas de Mantenimiento", "hidden": true }
          ]
        },
        "writerOpts": {
          "commitsSort": ["subject", "scope"]
        }
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md",
        "changelogTitle": "# Changelog\n\nAll notable changes to this project will be documented in this file.\n\nThe format is based on [Keep a Changelog](https://keepachangelog.com/en/1.0.0/),\nand this project adheres to [Semantic Versioning](https://semver.org/spec/v2.0.0.html)."
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "sed -i 's/version = \".*\"/version = \"${nextRelease.version}\"/' build.gradle.kts",
        "publishCmd": "echo 'Version ${nextRelease.version} released'"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "CHANGELOG.md",
          "build.gradle.kts",
          "package.json"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "build/libs/*.jar",
            "label": "Spring Boot Application JAR"
          }
        ],
        "successComment": "üéâ Este issue ha sido resuelto en la versi√≥n ${nextRelease.version} üéâ\n\nLa release est√° disponible en [GitHub Releases](${releases[0].url})",
        "failComment": false,
        "releasedLabels": ["released"],
        "addReleases": "bottom"
      }
    ]
  ],
  "tagFormat": "v${version}",
  "repositoryUrl": "https://github.com/lgzarturo/springboot-course",
  "debug": false,
  "ci": true,
  "dryRun": false,
  "verifyConditions": [
    "@semantic-release/changelog",
    "@semantic-release/git",
    "@semantic-release/github"
  ],
  "analyzeCommits": [
    "@semantic-release/commit-analyzer"
  ],
  "generateNotes": [
    "@semantic-release/release-notes-generator"
  ],
  "prepare": [
    "@semantic-release/changelog",
    "@semantic-release/exec",
    "@semantic-release/git"
  ],
  "publish": [
    "@semantic-release/github"
  ],
  "success": [
    "@semantic-release/github"
  ],
  "fail": false
}
