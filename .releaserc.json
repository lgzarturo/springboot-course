{
  "branches": [
    "main",
    {
      "name": "develop",
      "prerelease": "beta"
    }
  ],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          { "type": "feat", "release": "minor" },
          { "type": "fix", "release": "patch" },
          { "type": "perf", "release": "patch" },
          { "type": "revert", "release": "patch" },
          { "type": "docs", "release": false },
          { "type": "style", "release": false },
          { "type": "refactor", "release": "patch" },
          { "type": "test", "release": false },
          { "type": "build", "release": "patch" },
          { "type": "ci", "release": false },
          { "type": "chore", "release": false }
        ],
        "parserOpts": {
          "noteKeywords": ["BREAKING CHANGE", "BREAKING CHANGES", "BREAKING"]
        }
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            { "type": "feat", "section": "✨ Nuevas Funcionalidades", "hidden": false },
            { "type": "fix", "section": "🐛 Correcciones de Bugs", "hidden": false },
            { "type": "perf", "section": "🚀 Mejoras de Rendimiento", "hidden": false },
            { "type": "revert", "section": "⏪ Reversiones", "hidden": false },
            { "type": "docs", "section": "📚 Documentación", "hidden": false },
            { "type": "style", "section": "💎 Estilos", "hidden": true },
            { "type": "refactor", "section": "📦 Refactorizaciones", "hidden": false },
            { "type": "test", "section": "🚨 Tests", "hidden": true },
            { "type": "build", "section": "🛠 Sistema de Build", "hidden": false },
            { "type": "ci", "section": "⚙️ Integración Continua", "hidden": true },
            { "type": "chore", "section": "♻️ Tareas de Mantenimiento", "hidden": true }
          ]
        },
        "writerOpts": {
          "commitsSort": ["subject", "scope"]
        }
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md",
        "changelogTitle": "# Changelog\n\nTodos los cambios notables de este proyecto serán documentados en este archivo.\n\nEl formato está basado en [Keep a Changelog](https://keepachangelog.com/en/1.0.0/),\ny este proyecto adhiere a [Semantic Versioning](https://semver.org/spec/v2.0.0.html)."
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "sed -i 's/version = \".*\"/version = \"${nextRelease.version}\"/' build.gradle.kts"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "CHANGELOG.md",
          "build.gradle.kts"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "build/libs/*.jar",
            "label": "Spring Boot Application JAR"
          }
        ],
        "successComment": "🎉 Este issue ha sido resuelto en la versión ${nextRelease.version} 🎉\n\nLa release está disponible en [GitHub Releases](${releases[0].url})",
        "failComment": false,
        "releasedLabels": ["released"],
        "addReleases": "bottom"
      }
    ]
  ],
  "tagFormat": "v${version}",
  "repositoryUrl": "https://github.com/lgzarturo/springboot-course"
}